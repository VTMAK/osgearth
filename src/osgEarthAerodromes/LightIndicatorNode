#ifndef OSGEARTH_AERODROME_LIGHTINDICATORNODE
#define OSGEARTH_AERODROME_LIGHTINDICATORNODE 1

#include <osg/Group>

#include "Common"
#include "AerodromeFeatureNode"
#include <osgEarth/Feature>

namespace osgEarth { namespace Aerodrome
{
    using namespace osgEarth;
    using namespace osgEarth::Aerodrome;

    /**
     * LightIndicator
     */
    class OSGEARTHAERODROME_EXPORT LightIndicatorNode : public AerodromeFeatureNode
    {
    public:
        LightIndicatorNode(const AerodromeFeatureOptions& options, const std::string& icao, FeatureSource* featureSource, FeatureID fid) : AerodromeFeatureNode(options, icao, featureSource, fid) { }
        LightIndicatorNode(const AerodromeFeatureOptions& options, const std::string& icao, Feature* feature=0L) : AerodromeFeatureNode(options, icao, feature) { }

        virtual ~LightIndicatorNode() { }
    };


    class OSGEARTHAERODROME_EXPORT LightIndicatorGroup : public osg::Group
    {
    public:
        LightIndicatorGroup() { }

        virtual ~LightIndicatorGroup() { }
    };

} } // namespace osgEarth::Aerodrome

#endif // OSGEARTH_AERODROME_LIGHTINDICATORNODE
